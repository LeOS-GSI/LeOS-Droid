<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_large">

    <com.aurora.adroid.ui.view.HeaderLayout
        android:id="@+id/header_updated_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconAction="@drawable/ic_arrow"
        app:iconHeader="@drawable/ic_update_filled"
        app:txtHeader="@string/title_latest_updated" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_latest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_updated_apps"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_small"
        android:paddingEnd="@dimen/margin_small"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_cluster" />
</RelativeLayout>