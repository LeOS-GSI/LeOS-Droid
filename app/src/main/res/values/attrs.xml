<resources>
    <declare-styleable name="ProgressView">
        <attr name="progressText" format="reference" />
    </declare-styleable>

    <declare-styleable name="EmptyView">
        <attr name="emptyImage" format="reference" />
        <attr name="emptyText" format="reference" />
    </declare-styleable>

    <declare-styleable name="MultiTextLayout">
        <attr name="txtPrimary" format="string" />
        <attr name="txtSecondary" format="string" />
        <attr name="txtColorPrimary" format="color" />
        <attr name="txtColorSecondary" format="color" />
        <attr name="colorDivider" format="reference" />
    </declare-styleable>

    <declare-styleable name="HeaderLayout">
        <attr name="txtHeader" format="string" />
        <attr name="iconHeader" format="reference" />
        <attr name="iconAction" format="reference" />
    </declare-styleable>

    <declare-styleable name="FilePickerPreference">
        <attr name="selectionMode" format="enum">
            <enum name="single" value="0" />
            <enum name="multi" value="1" />
        </attr>
        <attr name="selectionType" format="enum">
            <enum name="file" value="0" />
            <enum name="directory" value="1" />
            <enum name="both" value="2" />
        </attr>
        <attr name="rootDir" format="string" />
        <attr name="fallbackDir" format="string" />
        <attr name="offsetDir" format="string" />
        <attr name="extensions" format="string" />
        <attr name="txtTitle" format="string" />
    </declare-styleable>
</resources>